# stop searching in parent directories
root = true

# apply in all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2

# Due to wrapping indentation set to 4
# this is left to checkstyle
[*.java]
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false
